            android:textColor="@android:color/background_light"
            android:textStyle="bold" />


        <Button
            android:id="@+id/buttinterro"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:background="@drawable/interro"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="horizontal"
        android:background="@drawable/fondboutton"
        android:weightSum="200">

        <ListView
            android:id="@+id/lv1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:background="@drawable/fondboutton">

        </ListView>


        <TextView
            android:id="@+id/des"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:background="@drawable/fondboutton"
            android:textSize="20dp"
            android:textStyle="bold" />

        //cr√©er mes pions en image

        <ImageView
            android:id="@+id/p1"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="20"
            android:background="@drawable/pion1"

            />

        <ImageView
            android:id="@+id/p2"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="20"
            android:src="@drawable/pion2"
            android:translationY="30dp"
            android:translationX="-38dp"
            />

        <ImageView
            android:id="@+id/p3"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="20"
            android:src="@drawable/pion3"
            android:translationX="-38dp"

            />

        <ImageView
            android:id="@+id/p4"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="20"
            android:src="@drawable/pion4"
            android:translationX="-76dp"
            android:translationY="30dp"
            />

        <ImageView
            android:id="@+id/p5"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="20"
            android:src="@drawable/pion5"
            android:translationX="-76dp"

            />



    </LinearLayout>









